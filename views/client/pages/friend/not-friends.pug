extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block link 

block main
    +alert-error(5000)

    .container.my-3
        include ../../partials/friendship-buttons.pug 

        .row
            .col-12
                +box-head(pageTitle)
                
        .row 
            .col-6(not-friend-user-id=user.id)
                if (users.length > 0)
                    each user in users
                        .box-user(id=user.id)
                            .inner-avatar   
                                img(
                                    src=(user.avatar || "/uploads/image.png")
                                    alt=user.fullName
                                )
                            .inner-info     
                                .inner-name #{user.fullName}
                                .inner-buttons 
                                    button.btn.btn-sm.btn-primary.mr-1(btn-add-friend=user.id) Kết bạn 
                                    button.btn.btn-sm.btn-secondary.mr-1(btn-cancel-friend=user.id) Hủy

block script 
    script(src="/js/friend.js")