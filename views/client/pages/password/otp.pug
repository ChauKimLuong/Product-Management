extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center Nhập mã OTP
                form(
                    action=`/password/otp`, 
                    method="POST",
                )
                    div(class="form-group mb-3")
                        label(for="email") Email *
                        input(
                            type="email", 
                            class="form-control", 
                            id="email", 
                            name="email",
                            value=email
                            required
                        )

                    div(class="form-group mb-3")
                        label(for="otp") Mã OTP
                        input(
                            type="otp", 
                            class="form-control", 
                            id="otp", 
                            name="otp", 
                            required
                        )

                    div(class="form-group d-flex justify-content-center")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Xác nhận

        