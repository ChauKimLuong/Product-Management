extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h2.mb-4 Cập nhật thông tin cá nhân

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST" 
        enctype="multipart/form-data"
    )
        div(class="form-group mb-4")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )

        div(class="form-group mb-4")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=user.email
                required
            )

        div(class="form-group mb-4")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        div(class="form-group mb-4")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )
            
        div(
                class="form-group mb-4"
                upload-image
            )
                label(for="avatar") Avatar
                br
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                button(
                    button-delete-image
                ) X
                br
                img(
                    src=user.avatar
                    class="image-preview"
                    upload-image-preview
                )

        div(class="form-group mb-4")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật



