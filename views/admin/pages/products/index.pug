            each item, index in products
                tr 
                    td  #{index+1}
                    td 
                        img(
                            src=item.thumbnail
                            alt=item.title
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td #{item.price}$
                    td
                        if item.status == "active"
                            a(href="#" class="btn btn-success btn-sm") Hoạt động
                        else 
                            a(href="#" class="btn btn-danger btn-sm") Dừng hoạt động
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa 

