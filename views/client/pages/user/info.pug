extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)

    style.
        /* Tổng quan */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f3f4f6;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .user-info {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .user-info:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Tiêu đề */
        .user-info h2 {
            margin-bottom: 20px;
            font-size: 2em;
            font-weight: 600;
            color: #007bff;
            text-align: center;
            text-transform: uppercase;
        }

        /* Danh sách thông tin */
        .user-info ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .user-info li {
            margin-bottom: 15px;
            padding: 10px;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            justify-content: space-between;
        }

        .user-info li:last-child {
            border-bottom: none;
        }

        .user-info li strong {
            font-weight: 700;
            color: #555;
            flex: 0 0 30%;
        }

        .user-info li span, 
        .user-info li code {
            color: #333;
            font-style: normal;
            flex: 1;
            text-align: left;
            padding-left: 10px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .user-info {
                padding: 15px;
            }

            .user-info h2 {
                font-size: 1.5em;
            }

            .user-info li {
                flex-direction: column;
                align-items: flex-start;
            }

            .user-info li strong, 
            .user-info li span {
                flex: 1;
                text-align: left;
                padding: 5px 0;
            }
        }

    if user
        .user-info
            h2 Thông tin tài khoản
            ul
                li
                    strong Họ và tên: 
                    span= user.fullName
                li
                    strong Email: 
                    span= user.email
                li
                    strong Trạng thái tài khoản: 
                    span= user.status
                li
                    strong Ngày tạo: 
                    span= user.createdAt.toLocaleString('vi-VN')
