extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h2 Chỉnh sửa tài khoản

    +alert-error(5000)
    +alert-success(5000)

    form(
        action=`${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH`, 
        method="POST", 
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="fullName") Họ và tên *
            input(
                type="text", 
                class="form-control", 
                id="fullName", 
                name="fullName",
                value=record.fullName,
                required
            )

        div(class="form-group")
            label(for="email") Email *
            input(
                type="email", 
                class="form-control", 
                id="email", 
                name="email", 
                value=record.email,
                required
            )
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password", 
                class="form-control", 
                id="password", 
                name="password",
            )

        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text", 
                class="form-control", 
                id="phone", 
                name="phone",
                value=record.phone,
            )

        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh
            br
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            button(
                button-delete-image
            ) X
            br
            img(
                src=record.avatar
                class="image-preview"
                upload-image-preview
            )

        div(class="form-group")
        label(for="role_id") Quyền
        select(name="role_id" id="role_id" class="form-control")
            option(disabled) -- Chọn quyền --
            each role in roles
                // Kiểm tra nếu role.id trùng với record.role_id
                option(value=role.id selected=(record.role_id.id==role.id)) #{role.title}




        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(record.status == "active")
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(record.status == "inactive")
            )
            label(
                for="statusInActive"
                class="form-check-label"
            ) Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
