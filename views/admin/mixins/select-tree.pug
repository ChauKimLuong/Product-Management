mixin select-tree(records, parent_id = "", level = 0)
    each item in records 
        - let indent = " - ".repeat(level * 2) 
        option(
            value=item.id
            selected=(item.id === parent_id)
        )   #{indent} #{item.title}

        if (item.children && item.children.length) > 0
            +select-tree(item.children, parent_id, level + 1)

