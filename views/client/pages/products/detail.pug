extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    h1.mb-4 Chi tiết sản phẩm

    +alert-error(5000)

    if (product.title) 
        h2.mb-4 #{product.title}
    
    if (product.description)
        .mb-4 
            b #{product.description}

    if (product.price) 
        .mb-4 
            | Giá: 
            b #{product.price}$
    
    if (product.discountPercentage) 
        .mb-4 
            | Giảm giá: 
            b #{product.discountPercentage}%

    if (product.stock) 
        .mb-4 
            | Còn lại: 
            b #{product.stock}

    if (product.thumbnail) 
        .mb-4 
            img(
                src=product.thumbnail
                style="width: 200px"
            )


    if (product.position)
        .mb-4 
            | Vị trí: 
            b #{product.position}
