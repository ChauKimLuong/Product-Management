extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head("Danh sách sản phẩm")
        .row
            .col-4.mb-3
                .product-item
                    .inner-image
                        img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png", alt="Sơn móng tay")
                    .inner-content
                        h3.inner-title Sơn móng tay
                        .inner-price-new 80$
                        .inner-price-old 100$
                        .inner-discount -20%
            each item in products 
                .col-4.mb-3
                    .product-item
                        .inner-image
                            img(src=item.thumbnail alt=item.title)
                        .inner-content
                            h3.inner-title #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%

